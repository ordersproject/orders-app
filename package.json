{
  "name": "orders-mvp",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "init-btc": "npx browserify --standalone bitcoin - -o src/lib/bitcoin.js <<<\"module.exports = require('bitcoinjs-lib');\"",
    "init-ecpair": "npx browserify --standalone ecpair - -o public/ecpair.js <<<\"module.exports = require('ecpair');\"",
    "init-bip32": "npx browserify --standalone bip32 - -o public/bip32.js <<<\"module.exports = require('bip32');\"",
    "init-bip39": "npx browserify --standalone bip39 - -o public/bip39.js <<<\"module.exports = require('bip39');\"",
    "build": "vue-tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.13",
    "@tanstack/vue-query": "^4.29.11",
    "@vueuse/core": "^10.1.2",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.0",
    "browserify": "^17.0.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.9",
    "decimal.js": "^10.4.3",
    "ecpair": "^2.1.0",
    "element-plus": "^2.3.5",
    "lucide-vue-next": "^0.236.0",
    "pinia": "^2.1.3",
    "radix-vue": "^1.2.2",
    "tailwind-merge": "^1.13.1",
    "tailwindcss-animate": "^1.0.7",
    "tiny-secp256k1": "^2.2.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "rollup": "^3.23.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "unplugin-auto-import": "^0.16.2",
    "unplugin-element-plus": "^0.7.1",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.8",
    "vite-plugin-node-polyfills": "^0.11.3",
    "vite-plugin-top-level-await": "^1.3.1",
    "vite-plugin-wasm": "^3.2.2",
    "vue-tsc": "^1.6.5"
  }
}
